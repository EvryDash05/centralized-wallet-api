{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:import/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "semi": "off",
        "indent": [
            "error",
            4
        ],
        "padded-blocks": [
            "off"
        ],
        "no-unused-vars": "warn",
        "no-undef": "error",
        "import/no-unresolved": "error",
        "import/extensions": [
            "error",
            "always"
        ]
    }
}