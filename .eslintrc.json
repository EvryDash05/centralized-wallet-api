{
    "env": {
        "node": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "plugin:import/recommended",
        "plugin:import/errors",
        "plugin:import/warnings"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "padded-blocks": [
            "error",
            {
                "blocks": "never",w
                "classes": "never",
                "switches": "never"
            }
        ],
        "indent": [
            "error",
            4
        ],
        "no-unused-vars": "warn",
        "no-undef": "error",
        "import/no-unresolved": "error",
        "import/extensions": [
            "error",
            "always"
        ]
    }
}